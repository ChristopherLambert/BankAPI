<script>
    function login() {

        const login = $('#form2Example1').val();
        const senha = $('#form2Example2').val();

         $.ajax({
             type: "POST",
             url: "@Url.Action("Logar", "Login")",
             data:
             {
                 login: login, senha: senha
             },
             success: function (result) {
                 Swal.close();
                 if (result.success) {
                     window.location.href = 'https://' + window.location.host + "/History";

                 } else {
                     Swal.fire({
                         icon: 'error',
                         title: 'Login ou Senha Invalida!',
                         text: '',
                         /*footer: '<a href="">Why do I have this issue?</a>'*/
                     })
                 }
             }
         });
    }
</script>